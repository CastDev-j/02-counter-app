---
import Footer from "@components/shared/Footer.astro";
import Header from "@components/shared/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Counter App</title>
  </head>
  <body class="flex flex-col gap-12 justify-center items-center bg-gray-50">
    <Header title="Counter Component with React" />
    <main class="flex flex-col gap-4 fade-up">
      <slot />
    </main>
    <Footer/>
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  @keyframes fadeUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-up {
    animation: fadeUp .3s ease-out forwards;
  }

  @keyframes appears {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .appears {
    animation: appears .3s ease-out forwards;
  }


</style>
